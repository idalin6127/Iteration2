    <div class="container">
        <div class="row mt-5 justify-content-center">
            <div class="col-md-6 bg-light p-4 rounded">
                <h1 class="text-center mb-4">Please Register</h1>
                <form method="POST" autocomplete="off">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username:</label>
                        <input type="text" class="form-control" name="username" placeholder="Enter username"
                            id="username" required autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password:</label>
                        <input type="password" class="form-control" name="password" placeholder="Enter password"
                            id="password" required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" class="form-control" name="email" placeholder="Enter Email Address"
                            id="email" required>
                    </div>

                    <div class="mb-3">
                        <label for="displayName" class="form-label">Display Name:</label>
                        <input type="text" class="form-control" name="displayName" placeholder="Enter Display Name"
                            id="displayName" required>
                    </div>

                    <div class="text-center">
                        <input type="submit" class="btn btn-primary btn-lg" value="Register">
                        <a href="/" class="btn btn-secondary btn-lg">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
